pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Run Maven to clean and package the application
                sh './mvnw clean package'
            }
        }
        stage('Deploy') {
            steps {
                // Copy the JAR file to the Apache directory (update as needed)
                sh 'sudo cp target/*.jar /var/www/html/app.jar'
            }
        }
    }
}

